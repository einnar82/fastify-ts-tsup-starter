{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "lib": ["ES2022"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      },
      "outDir": "dist",
      "resolveJsonModule": true
    },
    "include": ["src"]
  }
  